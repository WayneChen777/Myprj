            color: #fff;
        }
        </style>>
</head>
<body>
    <div class="container register-form">
        <div class="form">
            <div class="note">
                <p>This is a simpleRegister Form made using Boostrap.</p>
            </div>

            <div class="form-content" id="register">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Your Email *" value="" v-model="registerData.email" />
                        </div>
                        @*<div class="form-group">
                    <input type="text" class="form-control" placeholder="Phone Number *" value="" />
                </div>*@
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Your Password *" value="" v-model="registerData.password" />
                        </div>
                        @*<div class="form-group">
                    <input type="text" class="form-control" placeholder="Confirm Password *" value="" />
                </div>*@
                    </div>
                </div>
                <button type="button" class="btnSubmit" v-on:click="registerCheck">Submit</button>
            </div>
        </div>
    </div>
</body>
</html>

<script>
    var register = new Vue({
        el: "#register",
        data: {
            registerData:{
                email:"",
                password:""
            }
        },
        methods: {
            registerCheck: function (){
                let self = this;
                axios.post("/Account/Register", self.registerData).then(function (res) {
                    if (res.data == 1) {
                        //註冊成功就寄信
                        //axios.post("/MailSender/SendMail", self.registerData).then(function (res) { console.log(res.data); }).catch();
                        alert("註冊成功");
                    }
                    else {
                        alert("註冊失敗");
                    }
                })
                    .catch(function (err) {
                    });
            }
           
        }
    })
    </script>